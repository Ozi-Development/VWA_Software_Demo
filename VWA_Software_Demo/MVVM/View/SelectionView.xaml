                <TreeViewItem Header="Französisch "
                              IsExpanded="True"
                              Style="{StaticResource NeueLebendeFremdspracheTheme}">
                    <CheckBox Content="6. 7. 8. Klasse"
                              x:Name="chkFranzösisch_A"
